{
    "name": "babylonjs-editor",
    "displayName": "Babylon.JS Editor",
    "description": "Babylon.JS Editor extension used to develop scripts using VSCode",
    "version": "0.0.1",
    "repository": "https://github.com/BabylonJS/Editor/",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./.build/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "babylonjs-editor-explorer",
                    "title": "Babylon.JS Editor",
                    "icon": "assets/logo.svg"
                }
            ]
        },
        "views": {
            "babylonjs-editor-explorer": [
                {
                    "id": "behaviorCode",
                    "name": "Code Explorer"
                }
            ]
        },
        "commands": [
            {
                "command": "behaviorCode.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "assets/light/refresh.svg",
                    "dark": "assets/dark/refresh.svg"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "behaviorCode.refresh",
                    "when": "view == behaviorCode",
                    "group": "navigation"
                }
            ]
        },
        "configuration": [
            {
                "title": "Babylon.JS Editor"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p .",
        "watch": "tsc -watch -p .",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "node-fetch": "2.3.0",
        "socket.io-client": "2.2.0"
    },
    "devDependencies": {
        "@types/node": "^8.10.25",
        "@types/socket.io-client": "1.4.32",
        "typescript": "~3.0.1",
        "vscode": "1.1.30"
    }
}
